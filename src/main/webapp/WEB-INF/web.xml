<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>ru.mail.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>explorer</servlet-name>
        <servlet-class>ru.mail.controller.ExplorerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>explorer</servlet-name>
        <url-pattern>/explorer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>downloader</servlet-name>
        <servlet-class>ru.mail.controller.DownloadController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>downloader</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>encoding</filter-name>
        <filter-class>ru.mail.controller.filters.RequestEncodeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>permission</filter-name>
        <filter-class>ru.mail.controller.filters.PermissionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>permission</filter-name>
        <url-pattern>/explorer</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>permission</filter-name>
        <url-pattern>/download</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>permission</filter-name>
        <url-pattern>/resources/js/afterAutification/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>ru.mail.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


 </web-app>